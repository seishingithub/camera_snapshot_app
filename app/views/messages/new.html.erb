<div class="ecard_page">

  <h1>Send eCard</h1>

  <%= form_for @message do |f| %>
    <div class="form_text_field_width">
      <p>
        <%= f.label :sender_name %><br>
        <%= f.text_field :sender_name %>
      </p>
      <p>
        <%= f.label :sender_email %>
        <span class="messages_subtitle">  (required)</span><br>
        <%= f.text_field :sender_email %>
      </p>
      <p>
        <%= f.label :recipient_name %><br>
        <%= f.text_field :recipient_name %>
      </p>

      <p>
        <%= f.label :recipient_email %>
        <span class="messages_subtitle">  (required)</span><br>
        <%= f.text_field :recipient_email %>
      </p>
    </div>
    <div class="form_text_box_size">
      <p>
        <%= f.label :message %>
        <span class="messages_subtitle">  (required)</span><br>
        <%= f.text_field :message %>
      </p>
    </div>

    <p>
      <%= f.submit 'Preview' %>
  <% end %>
  </p>
</div>